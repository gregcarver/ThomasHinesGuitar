@model ThomasHinesGuitar.Models.AdminMain
@{
    ViewBag.Title = "AdminMainPage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="container">
    <div class="row">
        <div class="col-lg-10">
            @* Create a form to pass info from the view to the controller. *@
            @using (Html.BeginForm("AdminMainPage", "Admin"))
            {
                <h2>AdminMainPage</h2>
                <div class="form-group">
                    @Html.LabelFor(m => m.Contact)
                    @Html.TextBoxFor(m => m.Contact, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Location)
                    @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })

                </div>
                @* Submits the info entered to the controller to be pushed to the database. *@
                <button type="submit" value="Save" class="btn btn-primary">Submit</button>

            }
        </div>

    </div>
</div>